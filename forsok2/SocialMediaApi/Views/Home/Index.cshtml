@model List<SocialMediaApi.ViewModels.PostViewModel>

<div class="container mx-auto px-4">
    <h1 class="text-2xl font-bold mb-6">Feed</h1>

    @foreach (var post in Model)
    {
        <div class="bg-card rounded-lg shadow-md mb-6 p-4">
            <h2 class="text-xl font-semibold mb-2">@post.Title</h2>
            <img src="@post.ImageUrl" alt="Post Image" class="w-full rounded-md mb-4" />
            <p class="text-muted-foreground">
                Posted by @post.UserName on @post.Created.ToString("MMM dd, yyyy")
            </p>
            <div class="mt-4">
                <span class="text-muted-foreground">@post.LikesCount likes</span>
            </div>
            @if (post.Comments.Any())
            {
                <div class="mt-4 border-t pt-4">
                    <h3 class="font-semibold mb-2">Comments</h3>
                    @foreach (var comment in post.Comments)
                    {
                        <div class="mb-2">
                            <p class="text-sm">
                                <span class="font-semibold">@comment.UserName:</span>
                                @comment.Content
                            </p>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>